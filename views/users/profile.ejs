<% layout('layouts/boilerplate') %>

    <div class="container mt-5">
        <h1 class="mb-4">User Profile</h1>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Username: <%= user.username %>
                </h5>
                <h5 class="card-title">Email: <%= user.email %>
                </h5>

                <!-- Update Username -->
                <form action="/profile?_method=PUT" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Update Username</label>
                        <input type="text" name="username" id="username" class="form-control"
                            value="<%= user.username %>" required>
                        <div class="invalid-feedback">
                            Please provide a username.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Username</button>
                </form>

                <!-- Delete Account -->
                <form action="/profile?_method=DELETE" method="POST" class="mt-4">
                    <button type="submit" class="btn btn-danger">Delete Account</button>
                </form>
            </div>
        </div>
    </div>